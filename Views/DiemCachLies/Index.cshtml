@model IEnumerable<_BAITAPLAB05_KT.Models.DiemCachLy>
<head>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
</head>
<body>
                 <div class="form-group">
                <label  class="control-label"></label>
                <select id="name" class ="form-control" asp-items="ViewBag.Cachly"></select>
            </div>
                       
            <div class="form-group">
                <button id= "butn" value="Liệt kê" class="btn btn-primary" > Liệt kê</button>
            </div>

    
     <script type="text/javascript">
            $(document).ready(function () {
                  $('#butn').click(function(){
                            var name = $('#name').val();
                            var model = name;
                            console.log(model);
                            jQuery.ajax({
                          type: "POST",
                          url: "@Url.Action("Select","DiemCachLies")",
                          dataType: "json",
                          contentType: "application/json; charset=utf-8",
                          data: JSON.stringify( model ),
                          processData: true,
                          cache: false,
                              }).done(function(data){
                                 alert("Tạo phiếu mua hàng thành công");
                                 window.location.replace(data.newUrl);
                              });
                           });


                     


                });

     </script>
</body>
    