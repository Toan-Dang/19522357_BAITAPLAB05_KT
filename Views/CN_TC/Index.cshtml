@model IEnumerable<_BAITAPLAB05_KT.Models.CN_TC>

@{
    ViewData["Title"] = "Index";
}
<head>
     <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
</head>
<body>





            <div class="form-group">
                <label class="control-label">Số triệu chứng</label>
                 <input id= "name" class="form-control" />
            </div>
           
            <div class="form-group">
                <button id= "butn" value="Liệt kê" class="btn btn-primary" > Liệt kê</button>
            </div>




<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CongNhan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrieuChung)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CongNhan.MaCongNhan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrieuChung.MaTrieuChung)
            </td>
           
        </tr>
}
    </tbody>
</table>

     <script type="text/javascript">
            $(document).ready(function () {
                  $('#butn').click(function(){
                            var name = $('#name').val();
                            var model = name;
                            console.log(model);
                            jQuery.ajax({
                          type: "POST",
                          url: "@Url.Action("Select","CN_TC")",
                          dataType: "json",
                          contentType: "application/json; charset=utf-8",
                          data: JSON.stringify( model ),
                          processData: true,
                          cache: false,
                              }).done(function(data){
                                 alert("Tạo phiếu mua hàng thành công");
                                 window.location.replace(data.newUrl);
                              });
                           });


                     


                });

     </script>
    </body>